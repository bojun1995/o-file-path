{
  "name": "o-file-path",
  "displayName": "o-file-path",
  "description": "复制文件路径，别名路径，相对路径",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "alias",
    "file",
    "path",
    "relative",
    "import",
    "别名",
    "文件",
    "路径",
    "相对",
    "导入",
    "vue"
  ],
  "publisher": "bojun1995",
  "license": "MIT",
  "activationEvents": [
    "onCommand:o-file-path.getAliasPath",
    "onCommand:o-file-path.getAliasImportPath",
    "onCommand:o-file-path.getRelativePath",
    "onCommand:o-file-path.getRelativeImportPath"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "o-file-path.getAliasPath",
        "title": "📋 复制别名路径"
      },
      {
        "command": "o-file-path.getAliasImportPath",
        "title": "📋 复制导入别名路径"
      },
      {
        "command": "o-file-path.getRelativePath",
        "title": "📋 复制相对路径"
      },
      {
        "command": "o-file-path.getRelativeImportPath",
        "title": "📋 复制导入相对路径"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "o-file-path.getAliasPath",
          "group": "o-file-path@1"
        },
        {
          "command": "o-file-path.getAliasImportPath",
          "group": "o-file-path@2"
        },
        {
          "command": "o-file-path.getRelativePath",
          "group": "o-file-path@3"
        },
        {
          "command": "o-file-path.getRelativeImportPath",
          "group": "o-file-path@4"
        }
      ],
      "editor/title/context": [
        {
          "command": "o-file-path.getAliasPath",
          "group": "o-file-path@1"
        },
        {
          "command": "o-file-path.getAliasImportPath",
          "group": "o-file-path@2"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "o-file-path",
      "properties": {
        "o-file-path.alias": {
          "markdownDescription": "https://github.com/bojun1995/o-file-path/blob/main/README.md",
          "type": "array"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "ts-loader": "^9.3.0",
    "typescript": "^4.7.2",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  }
}
